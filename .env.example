# Core configuration
GCP_PROJECT_ID=your-gcp-project-id
NEWSLETTER_RECIPIENT=recipient@example.com

# Gemini / Google AI
# Prefer storing this in Secret Manager; keep empty locally unless needed
GEMINI_API_KEY=your_gemini_api_key

# Optional verification for custom header on /run-pipeline
# Prefer storing in Secret Manager; keep empty locally unless needed
CLOUD_RUN_VERIFY_TOKEN=

# Gmail accounts (set one or both; leave blank to disable)
ACCOUNT1_NAME=Personal Account
ACCOUNT1_EMAIL=
ACCOUNT1_TOKEN_FILE=token_account1.pickle
ACCOUNT1_SECRET_NAME=gmail-token-account1

ACCOUNT2_NAME=Student Account
ACCOUNT2_EMAIL=
ACCOUNT2_TOKEN_FILE=token_account2.pickle
ACCOUNT2_SECRET_NAME=gmail-token-account2

# Parallelism (optional overrides)
MAX_EXTRACTION_WORKERS=
MAX_DEDUPLICATION_WORKERS=
ENABLE_PARALLEL_PROCESSING=true